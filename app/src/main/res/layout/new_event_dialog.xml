            <Button
                android:id="@+id/start_time"
                android:layout_width="150dp"
                android:layout_height="24dp"
                android:background="@drawable/rectangle1" />

            <Button
                android:id="@+id/end_time"
                android:layout_width="150dp"
                android:layout_height="24dp"
                android:background="@drawable/rectangle1" />
        </LinearLayout>


